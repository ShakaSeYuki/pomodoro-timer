{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "2.0.2",
    "default_locale": "ja",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "action": {
        "default_icon": {
            "19": "img/icon19.png"
        },
        "default_title": "__MSG_actionTitle__",
        "default_popup": "pomodoro-timer.html"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ]
}