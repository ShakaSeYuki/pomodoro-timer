{
    "manifest_version": 3,
    "name": "ポモドーロタイマー(Pomodoro Timer)",
    "version": "2.0.0",
    "description": "ポモドーロテクニックを使いたい方向けタイマーです。設定時間毎に通知画面が表示されます。",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "action": {
        "default_icon": {
            "19": "img/icon19.png"
        },
        "default_title": "ポモドーロタイマー",
        "default_popup": "pomodoro-timer.html"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "background",
        "storage",
        "alarms",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/pomodoro-timer.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
    }
}