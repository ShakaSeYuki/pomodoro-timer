{
    "manifest_version": 3,
    "name": "ポモドーロタイマー(Pomodoro Timer)",
    "version": "2.0.1",
    "description": "ポモドーロテクニックを使いたい方向けタイマーです。設定時間毎に通知画面が表示されます。",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "action": {
        "default_icon": {
            "19": "img/icon19.png"
        },
        "default_title": "ポモドーロタイマー",
        "default_popup": "pomodoro-timer.html"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ]
}